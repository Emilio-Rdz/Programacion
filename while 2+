opcion = ""
while True:
    opcion = input("selecciona \n A: De kilos a libras \n B: De libras a kilos")
    if opcion.upper() == "A" or opcion.upper() == "B": 
        break

opcion = opcion.upper()
if opcion == "A":
    kilo = float(input("Introduce los kilogramos:"))
    libra = kilo/0.454
    print(kilo," kilogramos equivalen a ", libra, "libra")
else:
    libra = float(input("Introduce libras:"))
    kilo = libra * 0.454
    print(libra, "Libras equivalen a ",kilo, "kilogramos") 
